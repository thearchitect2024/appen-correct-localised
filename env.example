# AppenCorrect Environment Configuration Template
# Copy this file to .env and fill in your actual values

# AppenCorrect Configuration
DEFAULT_LANGUAGE=en_US
MAX_TEXT_LENGTH=50000

# Gemini AI Configuration
# Get your key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# OpenAI Configuration
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gemini-2.5-flash-lite
# Alternative models: gpt-4o-mini-2024-07-18, gpt-4o-mini, o1-mini

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=appencorrect.log

# API Documentation Base URL (for examples in docs)
API_BASE_URL=https://your-domain.com

# sendgrid 
SENDGRID_API_KEY=sendgrid key here
FROM_EMAIL=dc.recruitment@appen.com
FROM_NAME=AppenCorrect Team


# Performance Configuration
WORKERS=50
TIMEOUT=30
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50

# Redis/Valkey Cache Configuration
VALKEY_HOST=appencorrect-redis-0g4w6b.serverless.usw2.cache.amazonaws.com
VALKEY_PORT=6379
VALKEY_DB=0
VALKEY_PASSWORD=
VALKEY_SSL=true
VALKEY_ENABLED=true
VALKEY_DEFAULT_TTL=3600

# Flask Configuration
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5005
SECRET_KEY=your-secret-key-change-in-production

# Optional: Application Configuration
# Set to true to disable specific features for testing
APPENCORRECT_DISABLE_GEMINI=false
APPENCORRECT_DISABLE_SPELLING=false
APPENCORRECT_DISABLE_GRAMMAR=false 

